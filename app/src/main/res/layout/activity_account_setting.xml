<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingActivity">
    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_text_size"
        android:text="姓&#8195;名"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        android:layout_margin="@dimen/view_margin"/>
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/nameView"
        app:layout_constraintTop_toTopOf="@id/nameView"
        app:layout_constraintBottom_toBottomOf="@id/nameView"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_marginBottom="@dimen/view_margin"
        app:layout_constraintTop_toBottomOf="@id/nameView"
        app:layout_constraintBottom_toTopOf="@id/passwordsView"/>
    <TextView
        android:id="@+id/passwordsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_text_size"
        android:text="新密码"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/view_margin"/>
    <EditText
        android:id="@+id/passwordsInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/passwordsView"
        app:layout_constraintTop_toTopOf="@id/passwordsView"
        app:layout_constraintBottom_toBottomOf="@id/passwordsView"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:text="确&#8195;认"
        android:textSize="@dimen/view_text_size"
        android:paddingTop="@dimen/button_padding_size"
        android:paddingBottom="@dimen/button_padding_size"
        app:layout_constraintTop_toBottomOf="@id/passwordsView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@drawable/corner_border_button_selected"/>
</android.support.constraint.ConstraintLayout>