<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/unit_pic"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="h,1:1.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/unit_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_size"
        android:maxLines="3"
        android:text="title"
        android:textSize="@dimen/view_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/unit_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/unit_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_size"
        android:layout_marginStart="@dimen/item_view_size"
        android:layout_marginEnd="@dimen/item_view_size"
        android:text="show time"
        app:layout_constraintStart_toEndOf="@+id/unit_pic"
        app:layout_constraintTop_toBottomOf="@+id/unit_title" />

    <TextView
        android:id="@+id/unit_venue_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_size"
        android:layout_marginStart="@dimen/item_view_size"
        android:layout_marginEnd="@dimen/item_view_size"
        android:text="venue city"
        app:layout_constraintStart_toEndOf="@+id/unit_pic"
        app:layout_constraintTop_toBottomOf="@+id/unit_show_time" />

    <TextView
        android:id="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_size"
        android:layout_marginStart="@dimen/item_view_size"
        android:layout_marginEnd="@dimen/item_view_size"
        android:text="price"
        app:layout_constraintStart_toEndOf="@+id/unit_pic"
        app:layout_constraintTop_toBottomOf="@+id/unit_venue_city" />

    <TextView
        android:id="@+id/unit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_size"
        android:layout_marginStart="@dimen/item_view_size"
        android:layout_marginEnd="@dimen/item_view_size"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/unit_price"
        app:layout_constraintTop_toBottomOf="@+id/unit_venue_city" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/unit_pic"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/item_view_size"
        android:layout_marginBottom="@dimen/item_view_size"/>
</android.support.constraint.ConstraintLayout>